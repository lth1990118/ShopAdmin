            'auto': true,
            //设置为true将允许多文件上传
            'multi': true,
            //上传完成后执行
            'onUploadSuccess': function (file, data, response) {
                var a = jQuery.parseJSON(data);
                if (a.Success) {
                    var contain = document.getElementById("contain")
                    var img = document.createElement("img");
                    img.height = 100;
                    img.width = 100;
                    img.src = a.SaveName;
                    contain.appendChild(img);
                }
                else {
                    alert("导入图片失败：" + a.Message);
                }
            }
        });
    });
